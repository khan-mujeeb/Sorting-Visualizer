<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/dark_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sorting_menu">
    <TextView
        android:layout_width="match_parent"
        android:text="SORTING ALGORITHM"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/buubleSortBtn"
                android:layout_width="match_parent"
                android:text="BUBBLE SORT"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/lightGreen"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/selectionSortBtn"
                android:layout_width="match_parent"
                android:text="SELECTION SORT"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/lightGreen"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/insertionSortBtn"
                android:layout_width="match_parent"
                android:text="@string/insertion_sort"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/lightGreen"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>