<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="10dp"

    android:orientation="vertical"
    tools:context=".ui.bubbleSort">
    <TextView
        android:backgroundTint="@color/red"
        android:layout_width="match_parent"
        android:text="Before Sorting"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bsOne"
            android:textStyle="bold"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/bsTwo"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/bsThree"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/bsFour"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:text="1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/bsFive"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="1"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>
    </LinearLayout>

    <TextView

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:text="After Sorting"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/asOne"
            android:padding="10dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/green"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/astwo"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/asthree"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/asfour"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:textColor="@color/dark_blue"
            android:id="@+id/asfive"
            android:padding="10dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:layout_height="50dp">
        </TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/code"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/code"
            android:textSize="20sp"
            android:background="@color/white"
            android:padding="10dp"
            android:textColor="@color/dark_blue"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="@string/steps_involved"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bSortList"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>